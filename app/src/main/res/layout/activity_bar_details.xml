<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bar_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zombietechinc.barhopforbusiness.BarDetailsActivity"
    android:background="@color/bg_main">


    <Button
        android:text="Sign Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/sign_out_button"/>

    <Button
        android:text="Update Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_bar_button"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="MAX CAPACITY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/update_bar_button"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bar_cap"
        android:hint="0"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/bar_name_tv"
        android:text="BarName"
        android:layout_below="@+id/sign_out_button"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/bar_address_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:hint="Happy Hour 3-7!!"
        android:maxLength="20"
        android:id="@+id/event_et"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bar_address_tv"
        android:text="BarAddress"
        android:layout_below="@+id/bar_name_tv"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_tv"
        android:text="Events or Promotions?"


        android:layout_below="@+id/event_et"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
